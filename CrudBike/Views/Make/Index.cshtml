@model IEnumerable<CrudBike.Models.Make>

<br />

<div class="row">
    <div class="col-6">
        <h2 class="text-info">Brands of Motor Cycles</h2>
    </div>
    <div class="col-6 text-right">
        <a class="btn btn-info" asp-action="Create"><i class="fas fa-motorcycle"></i> &nbsp; Add New Brand </a>
</div>
</div>

<br />
<div class="col-12">
    <table class="table table-striped border">
        <tr class="table-info">
            <th> @Html.DisplayNameFor(m => m.Name)</th>
            <th></th>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(m => item.Name)
                </td>
                <td class="text-right">
                    <div class="btn-group" role="group">                        
                            <a type="button" class="btn btn-primary" href="@Url.Action("Edit")/@item.Id"><i class="far fa-edit"></i> </a>
                            <form method="post" action="Delete">
                             <button onclick="if(!confirm('Are you sure you want to delete this brand')){return false}" type="submit" class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id"  ><i class="far fa-trash-alt"></i> </button>

                            </form>
                        </div>                 
                </td>

            </tr>
        }

    </table>
</div>